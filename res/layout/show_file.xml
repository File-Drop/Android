<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileDrop">
        <ImageView android:id="@+id/image_view" android:layout_width="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"/>            
        <TextView android:id="@+id/name" android:textColor="#FF000000"
            android:textSize="19sp" android:layout_width="wrap_content"
            android:singleLine="true"
             android:layout_height="wrap_content" android:layout_gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
</LinearLayout>  